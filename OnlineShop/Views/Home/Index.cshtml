
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
    var slides = (List<MyDatabase.EF.Slide>)ViewBag.Slides;
    var listNewProducts = (List<MyDatabase.EF.Product>)ViewBag.NewProducts;
    var listFeatureProducts = (List<MyDatabase.EF.Product>)ViewBag.FeatureProducts;

}

@section slide{
    <div class="header_slide">
    <div class="header_bottom_left">
        <div class="categories">
            @{ Html.RenderAction("ProductCategory", "Product"); }
        </div>
    </div>
    <div class="header_bottom_right">
        <div class="slider">
            <div id="slider">
                <div id="mover">
                    @foreach (var item in slides)
                    {
                        <div id="slide-1" class="slide">
                            <div class="slider-img">
                                <a href="@item.link"><img src="@item.imageLocation" alt="learn more" /></a>
                            </div>
                            <div class="slider-text">
                                <h1>Clearance<br><span>SALE</span></h1>
                                <h2>UPTo 20% OFF</h2>
                                <div class="features_list">
                                    <h4>Get to Know More About Our Memorable Services Lorem Ipsum is simply dummy text</h4>
                                </div>
                                <a href="preview.html" class="button">Shop Now</a>
                            </div>
                            <div class="clear"></div>
                        </div>
                    }
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>
</div>
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Sản phẩm mới</h3>
        </div>
        <div class="see">
            <p><a href="/san-pham">Xem tất cả</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in listNewProducts)
        {
            var url = "/chi-tiet/" + item.metaTitle + "-" + item.id;
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@url"><img title="@item.descriptions" src="@item.imageLocation"  alt="@item.name" style="width: 212px; height: 212px"/></a>
                <h2>@item.name</h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@(item.price > 0 ? item.price.Value.ToString("N0") + " VNĐ": "Liên hệ")</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="/them-vao-gio?productID=@item.id&quantity=1">Thêm vào giỏ</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }
    </div>
    <div class="content_bottom">
        <div class="heading">
            <h3>Sản phẩm hot</h3>
        </div>
        <div class="see">
            <p><a href="#">Xem tất cả</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in listFeatureProducts)
        {
            var url = "/chi-tiet/" + item.metaTitle + "-" + item.id;
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@url"><img title="@item.descriptions" src="@item.imageLocation" alt="@item.name" style="width: 212px; height: 212px"/></a>
                <h2>@item.name</h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@(item.price > 0 ? item.price.Value.ToString("N0") + " VNĐ": "Liên hệ")</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="/them-vao-gio?productID=@item.id&quantity=1">Thêm vào giỏ</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }
    </div>
</div>

